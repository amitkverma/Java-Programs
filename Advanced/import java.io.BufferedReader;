import java.io.BufferedReader;
import java.io.InputStreamReader;

public class Practice
{
	public static void main(String[] args)
	{
		try
		{
			BufferedReader reader=new BufferedReader(new InputStreamReader(System.in));
			while(String str=reader.readLine()!=null)
			{
				removeComments(str,reader);
			}			
		}
		catch(Exception ex)
		{
			System.out.println("Something bad occur...");
		}
	}
	public static String removeComments(String input,BufferedReader reader)
	{
		StringBuilder builder=new StringBuilder(input);
		char slash='/';
		char star='*';
		if(int i=builer.indexOf("/")!=-1)
		{
			if(builder.charAt(i+1)==slash)
			{
				return builder.delete(i,i+1).toString();
			}
			else if(builder.charAt(i+1)==star)
			{
				builder.delete(0,1);
				while(builder.charAt(builder.length()-2)!=star&&builder.charAt(builder.length()-1)!=slash)
				{
					String nextLine=readNextLine(reader);
					if(nextLine!=null)
					{
						builder.append(nextLine);					
					}
					else
					{
					 	break;
					}
				}
				builder.delete(builder.length()-2,builder.length-1);
				return builder.toString();
			}			
		}
		return builder.toString();
	}
	public static String readNextLine(BufferedReader reader)
	{
		return reader.readLine();		
	}
}